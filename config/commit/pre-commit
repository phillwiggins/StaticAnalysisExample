#!/bin/bash

git stash -q --keep-index

echo "#################################"
echo "#     Running KTLintFormat      #"
echo "#################################"

gradlew ktlintFormat

echo "#################################"
echo "#     Running KTLintCheck       #"
echo "#################################"

<<<<<<< Updated upstream:config/commit/pre-commit
gradlew ktlintCheck
=======
./gradlew ktlintCheck
>>>>>>> Stashed changes:config/commit/pre-push

RESULT=$?

git stash pop -q

# return 1 exit code if running checks fails
[ $RESULT -ne 0 ] && exit 1
exit 0